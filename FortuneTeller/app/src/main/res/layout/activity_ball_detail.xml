<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:text="@string/btn_yaoGua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:id="@+id/btn_tell"
            android:layout_marginStart="32dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp" android:id="@+id/tellContent"
            android:layout_below="@+id/btn_tell" android:layout_alignStart="@+id/btn_tell"/>
    <Button
            android:text="@string/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_copy" android:layout_alignBaseline="@+id/btn_save"
            android:layout_alignBottom="@+id/btn_save" android:layout_toEndOf="@+id/btn_save"
            android:layout_marginStart="18dp"/>
    <Button
            android:text="@string/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            android:layout_alignBaseline="@+id/btn_tell" android:layout_alignBottom="@+id/btn_tell"
            android:layout_toEndOf="@+id/btn_tell" android:layout_marginStart="15dp"/>
</RelativeLayout>